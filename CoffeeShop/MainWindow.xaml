<Window x:Class="CoffeeShop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Кофейня" Height="450" Width="400">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Выберите тип кофе:" FontSize="16" Margin="0,0,0,20"/>

            <ComboBox x:Name="coffeeComboBox" SelectedIndex="0" FontSize="14" Margin="0,0,0,20">
                <ComboBoxItem>Латте</ComboBoxItem>
                <ComboBoxItem>Эспрессо</ComboBoxItem>
                <ComboBoxItem>Американо</ComboBoxItem>
                <ComboBoxItem>Капучино</ComboBoxItem>
            </ComboBox>

            <Button x:Name="orderButton" Content="Заказать кофе" 
                    Click="OrderButton_Click" FontSize="14" Padding="10" Margin="0,0,0,20"/>

            <TextBlock Text="Процесс приготовления:" FontSize="16" Margin="0,0,0,10"/>

            <TextBox x:Name="processTextBox" Height="150" FontSize="12" 
                     IsReadOnly="True" VerticalScrollBarVisibility="Auto"
                     TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>
</Window>