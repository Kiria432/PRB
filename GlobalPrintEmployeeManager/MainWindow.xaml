<Window x:Class="GlobalPrintEmployeeManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Global Print Employee Manager" 
        Height="700" 
        Width="1000"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <Style TargetType="DataGrid">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="AutoGenerateColumns" Value="True"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="AlternatingRowBackground" Value="LightBlue"/>
            <Setter Property="SelectionMode" Value="Single"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10" HorizontalAlignment="Center">
            <TextBlock Text="Global Print Employee Management System" 
                      FontSize="18" 
                      FontWeight="Bold"
                      Foreground="DarkBlue"/>
        </StackPanel>

        <!-- Content -->
        <TabControl Grid.Row="1" Margin="10">
            <TabItem Header="All Employees">
                <DataGrid x:Name="AllDataGrid" 
                         AutoGenerateColumns="True"/>
            </TabItem>

            <TabItem Header="Administrators">
                <StackPanel>
                    <TextBlock x:Name="AdminCountText"
                              Margin="10,5"
                              FontWeight="Bold"
                              Foreground="Green"/>
                    <DataGrid x:Name="AdminDataGrid" 
                             AutoGenerateColumns="True"/>
                </StackPanel>
            </TabItem>

            <TabItem Header="Users">
                <StackPanel>
                    <TextBlock x:Name="UserCountText"
                              Margin="10,5"
                              FontWeight="Bold"
                              Foreground="Blue"/>
                    <DataGrid x:Name="UserDataGrid" 
                             AutoGenerateColumns="True"/>
                </StackPanel>
            </TabItem>
        </TabControl>

        <!-- Footer -->
        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <Button x:Name="LoadButton" 
                       Content="Load Employees from CSV" 
                       Click="LoadButton_Click"/>
            </StatusBarItem>

            <StatusBarItem>
                <Separator/>
            </StatusBarItem>

            <StatusBarItem>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Status:" FontWeight="Bold"/>
                    <TextBlock x:Name="StatusText" Margin="5,0,0,0"/>
                </StackPanel>
            </StatusBarItem>

            <StatusBarItem>
                <Separator/>
            </StatusBarItem>

            <StatusBarItem>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Total:" FontWeight="Bold"/>
                    <TextBlock x:Name="TotalCountText" Margin="5,0,0,0"/>
                </StackPanel>
            </StatusBarItem>

            <StatusBarItem>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Admins:" FontWeight="Bold"/>
                    <TextBlock x:Name="AdminCountStatusText" Margin="5,0,0,0" Foreground="Green"/>
                </StackPanel>
            </StatusBarItem>

            <StatusBarItem>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Users:" FontWeight="Bold"/>
                    <TextBlock x:Name="UserCountStatusText" Margin="5,0,10,0" Foreground="Blue"/>
                </StackPanel>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>